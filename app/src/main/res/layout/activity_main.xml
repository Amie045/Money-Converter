<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center"
    android:background="@drawable/gradient"
    >

    <ImageView

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="70sp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/bank" />

    <LinearLayout
        android:layout_marginStart="35dp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/uang_input"
            android:textSize="20sp"
            android:hint="0 Rupiah"
            android:inputType="number"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="20sp"/>

        <TextView
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hasil_konversi"
            android:text="Hasil Konversi"
            android:textSize="20sp"/>
    </LinearLayout>

    <Button
        android:layout_marginStart="50dp"
        android:id="@+id/rpusd"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round"
        android:onClick="toUSD"
        android:text="Rupiah > USD"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:layout_marginStart="50dp"
        android:layout_width="270dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="Rupiah > YEN"
        android:textColor="#FFFFFF"
        android:background="@drawable/round2"
        android:onClick="toYEN"
        android:id="@+id/rpyen"/>

    <Button
        android:layout_marginStart="50dp"
        android:layout_width="270dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round3"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Rupiah > Euro"
        android:textSize="20sp"
        android:onClick="toEuro"
        android:id="@+id/rpeuro"/>

    <Button
        android:layout_marginStart="50dp"
        android:layout_width="270dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round4"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Rupiah > Pounds"
        android:textSize="20sp"
        android:onClick="toEuro"
        android:id="@+id/rpounds"/>



</LinearLayout>
